function checkDivisibility(n) {
            if (n % 2 === 0 && n % 3 === 0) {
                console.log(`${n} is divisible by both 2 and 3.`);
            } else if (n % 2 === 0) {
                console.log(`${n} is divisible by 2.`);
            } else if (n % 3 === 0) {
                console.log(`${n} is divisible by 3.`);
            } else {
                console.log(`${n} is not divisible by 2 or 3.`);
            }
        }
        
        
        const userInput = prompt("Enter a number to check divisibility:");
        const n = parseInt(userInput, 10);
        
        if (!isNaN(n)) {
            checkDivisibility(n);
        } else {
            console.log("Invalid input! Please enter a valid number.");
        }



